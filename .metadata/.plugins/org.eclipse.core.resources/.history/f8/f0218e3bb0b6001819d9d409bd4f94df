package lab3;

import java.util.Random;

public class problem {
	
	public static void main(String[] arg) {
		int[] aRand = new int[20];
		populateArray(aRand);
		System.out.println(calculateAverage(aRand));
		printArray(aRand);
	}
	
	public static void populateArray(int[] array) {
		Random random = new Random();
		for(int i = 0; i < 20; i++) {
			array[i] = random.nextInt(10)+1;
		}	
	}
	
	public static double calculateAverage(int[] array) {
		double x = 0;
		for(int i=0; i<20; i++) {
			x = x + array[i];
		}
		double average = x/array.length;
		return average;
	}
	
	public static void printArray(int[] array) {
		System.out.println("The values in the array are as follow: ");
		for(int i = 0; i<20; i++) {
			System.out.println(array[i]);	
		}
		System.out.println("The average of the array is: "+ calculateAverage(array));
	}
	

}
